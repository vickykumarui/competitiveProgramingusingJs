/* loop through whole array keep a pointer at iif value of i 
is not same as previous and next value than value becomes 
uniques in case of sorted array

*/

function countUniqueValue(arr){
    let count = 0;

    for(let i = 0; i < arr.length; i++){
        if(arr[i] !== arr[i+1]){
            count++
        }
    }

    return count++;
}